{% extends 'base.html.twig' %}

{% block title %}Sick index{% endblock %}

{% block body %}
    <h1>Sick index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IPP</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sick in sicks %}
            <tr>
                <td>{{ sick.id }}</td>
                <td>{{ sick.iPP }}</td>
                <td>{{ sick.firstName }}</td>
                <td>{{ sick.lastName }}</td>
                <td>
                    <a href="{{ path('app_sick_show', {'id': sick.id}) }}">show</a>
                    <a href="{{ path('app_sick_edit', {'id': sick.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sick_new') }}">Create new</a>
{% endblock %}
